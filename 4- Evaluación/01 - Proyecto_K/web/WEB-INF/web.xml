<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>controlador.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorAdmin</servlet-name>
        <servlet-class>controlador.ControladorAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlador_validar</servlet-name>
        <servlet-class>controlador.controlador_validar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>envio_correo</servlet-name>
        <servlet-class>controlador.envio_correo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlador_categorias_juegos</servlet-name>
        <servlet-class>controlador.controlador_categorias_juegos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlador_productos_vendidos</servlet-name>
        <servlet-class>controlador.controlador_productos_vendidos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlador_productos_no_tan_vendidos</servlet-name>
        <servlet-class>controlador.controlador_productos_no_tan_vendidos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registro_reservacion</servlet-name>
        <servlet-class>controlador.registro_reservacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>insertarcliente</servlet-name>
        <servlet-class>controlador.insertarcliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorAdmin</servlet-name>
        <url-pattern>/ControladorAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlador_validar</servlet-name>
        <url-pattern>/controlador_validar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>envio_correo</servlet-name>
        <url-pattern>/envio_correo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlador_categorias_juegos</servlet-name>
        <url-pattern>/controlador_categorias_juegos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlador_productos_vendidos</servlet-name>
        <url-pattern>/controlador_productos_vendidos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlador_productos_no_tan_vendidos</servlet-name>
        <url-pattern>/controlador_productos_no_tan_vendidos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registro_reservacion</servlet-name>
        <url-pattern>/registro_reservacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>insertarcliente</servlet-name>
        <url-pattern>/insertarcliente</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
